{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDirs": [
      // Treat declaration files in ./types as they where in ./
      // E.g.: declaration for config.js file 
      "./",
      "types"
    ],
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "stripInternal": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}