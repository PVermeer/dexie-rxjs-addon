{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Jasmine",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/home/app",
            "sourceMapPathOverrides": {
                "/home/app/*": "${workspaceRoot}/*",
            },
            "trace": "verbose",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "port": 9229
        },
        {
            "name": "Docker: Attach to Karma",
            "type": "chrome",
            "request": "attach",
            "address": "127.0.0.1",
            "port": 9339,
            "webRoot": "${workspaceFolder}",
            "pathMapping": {
                "/_karma_webpack_": "${workspaceFolder}"
            },
            "sourceMapPathOverrides": {
                "webpack:/*": "${webRoot}/*"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach to Karma",
            "type": "chrome",
            "request": "attach",
            "port": 9333,
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Run Jasmine (node) tests",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/node_modules/jasmine/bin/jasmine",
                "--config=jasmine.conf.json",
                "--reporter=jasmine-console-reporter"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/test",
            "protocol": "inspector",
            "console": "integratedTerminal"
        }
    ]
}